.nav-pills
  font-family: 'Yanone Kaffeesatz', sans-serif
  font-weight: 400
  font-size: 20px


.nav-pills>li.active>a
    text-decoration: none
    background-color: #373737 !important

.nav-pills>li>a
  color: #929192

.nav-pills>li>a:hover
  background-color: #6B6B6B !important
  color: whitesmoke


